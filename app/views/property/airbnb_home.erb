<div class="container">
	<form id = "CurrentUser" action="/" method="GET">
		<p><b>Current User:</b> ID: <%= session[:name] %> Name: <%= session[:name] %> <button type="submit" class="btn btn-default" color: "blue">Sign Out</button></p> 
	</form>

	<a href = "/manage"> <button class="btn btn-default">Manage My Advertisement</button></a>
	<a href = "/booking"> <button class="btn btn-default">Manage My Booking</button></a>
	
	</form>

</div>

<div class = "container">
	<table class="table table-hover">
			<tr>
				<td> ID </td>
				<td> PROPERTY NAME </td>
				<td> PROPERTY DETAILS </td>
				<td> PRICE (RM) </td>
				<td> POSTED BY </td>
				<td> BOOK </td>
			</tr>
			<% if not @all_properties.nil? %>
				<% @all_properties.each do |row| %>
					<tr>
						<td>
							<%= row.id.to_s %>
						</td>
						<td>
							<%= row.prop_name %>
						</td>
						<td>
							<%= row.prop_details %>
						</td>
						<td>
							<%= row.price %>
						</td>
						<td>
							<%= row.user.name %>
						</td>
						<td>
							<a href = "/booking/<%= row.id.to_s %>"><button class="btn btn-default">Book</button></a>
						</td>
					</tr>
				<% end %>
				 <% @all_properties = nil %>
			<% end %>
		</table>
</div>